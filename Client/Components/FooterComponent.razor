@inject ILanguageContainerService languageContainer

<footer class="bg-dark section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="text-center">
                    <ul class="list-inline social-list mb-0">
                        <li class="list-inline-item">
                            <a href="#" class="social-icon footer-link">
                                <i class="mdi mdi-facebook"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="social-icon footer-link">
                                <i class="mdi mdi-twitter"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="social-icon footer-link">
                                <i class="mdi mdi-linkedin"></i>
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a href="#" class="social-icon footer-link">
                                <i class="mdi mdi-google-plus"></i>
                            </a>
                        </li>
                    </ul>
                    <!--end social-->
                </div>
                <div class="footer-terms">
                    <ul class="mb-0 list-inline text-center mt-4">
                        <li class="list-inline-item"><a href="#" class="footer-link">@languageContainer.Keys["TermsAndCondition"]</a></li>
                        <li class="list-inline-item"><a href="#" class="footer-link">@languageContainer.Keys["PricavyPolicy"]</a></li>
                        <li class="list-inline-item"><a href="#" class="footer-link">@languageContainer.Keys["ContactUs"]</a></li>
                    </ul>
                </div>
                <!--end footer-terms-->
            </div>
            <!--end row-->
        </div>
        <!--end row-->
    </div>
    <!--end container-->
</footer>
@code {
    [Parameter]
    public string CultureCode { get; set; }

    protected override async Task OnInitializedAsync()
    {
        languageContainer.SetLanguage(System.Globalization.CultureInfo.GetCultureInfo(CultureCode));


    }
}
