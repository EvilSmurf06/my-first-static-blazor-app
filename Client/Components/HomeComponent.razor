@inject ILanguageContainerService languageContainer

<section class="bg-home4 overflow-hidden" id="home" name="home">
    <div class="container">
        <div class="position-relative" style="z-index: 1;">
            <div class="row align-items-center">
                <div class="col-xl-5 col-lg-6">
                    <div>
                        <h6 class="home-subtitle text-primary mb-4">@languageContainer.Keys["HomeMessageTitle"]</h6>
                        <h1>@languageContainer.Keys["HomeMessageContent"]</h1>
                        <p class="text-black-50 fs-17 pt-4">
                            @languageContainer.Keys["HomeMessage"]
                        </p>
                        <div class="text-center subscribe-form mt-5">
                            <form action="#">
                                <input type="text" class="control-form" id="inputemail" placeholder="@languageContainer.Keys["EnterYourEmail"]">
                                <button type="submit" class="btn btn-primary">@languageContainer.Keys["Subscribe"]</button>
                            </form>
                        </div>
                    </div>
                </div>
                <!--end col-->
                <div class="col-lg-6 offset-xl-1">
                    <div class="mt-lg-0 mt-5">
                        <img src="images/home/home1.png" class="home-img">
                    </div>
                </div>
            </div>
            <!--end row-->
        </div>
    </div>
    <!--end container-->
</section>
@code {
    [Parameter]
    public string CultureCode { get; set; }

    protected override async Task OnInitializedAsync()
    {
        languageContainer.SetLanguage(System.Globalization.CultureInfo.GetCultureInfo(CultureCode));


    }


}
