@code {

    string culture = "en-US";
    async Task SetLanguage(string cultureCod)
    {
        languageContainer.SetLanguage(System.Globalization.CultureInfo.GetCultureInfo(cultureCod));
        culture = cultureCod;
        expandSubNav = false;
    }
    private bool expandSubNav;

}

